@model BoilerTemplateGeneration.Models.HomeModel;



@{
    ViewData["Title"] = "Boiler Page";
    Layout = "~/Views/Shared/layout.cshtml";
    
}


@if(TempData["success"]!= null)
{
    <script type="text/javascript">
       toastr.success('@TempData["success"]',{"iconClass": 'toast-success'});
       
    </script>
}
@if(TempData["error"]!= null)
{
    <script type="text/javascript">
       toastr.error('@TempData["error"]',{"iconClass": 'toast-error'});
       
    </script>
}

@section Styles
{
    <style>
        .Drop{
            position:relative;
        }
    </style>
}

<div>
    <p class="font-weight-bold text-primary font-italic">Select the Front and Back End Technology</p>
    <form id="myform" asp-action="Index" asp-controller="Home" method="post" class="form-floating modal-dialog-scrollable">
        
<div class="row">
    <div class="form-group col-md-2 d-inline">
                            <label class="form-label "  >Choose FrontEnd Technology</label>
                           
                        </div>
    <div class="form-group col-md-4 d-inline" >
   <select class="form-control" name="FrontId" >
       <option>Select Option..</option>
       @foreach(var item in Model.TblFronts){
       <option value="@item.FrontId" >
            @item.FrontName
            
       </option>
        
  
       }
   </select>
   </div>
   </div>
   <div class="row">
    <div class="form-group col-md-2 d-inline">
                            <label class="form-label "  >Choose BackEnd Technology</label>
                           
                        </div>
    <div class="form-group col-md-4 d-inline" >
   <select class="form-control" name="BackId" >
       <option>Select Option..</option>
       @foreach(var item in Model.TblBackEnd){
       <option value="@item.BackId" >
            @item.BackName
            
       </option>
        
  
       }
   </select>
   </div>
   </div>
   
   </form>
    <div class="modal-footer">
               @*<button type="button" class="btn btn-primary" data-save="modal">Save</button> *@ 
               @* <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button> *@
               <input class="btn btn-primary small" type="submit" form="myform" value="Submit"  />


    </div>
    
</div>





@section scripts
{
    <script>
        
        $(window).on('load',function() {
                                
            $('body').removeClass('preload')
        $('#loading').removeClass('loader-wrapper');
        $('#loading1').removeClass('loader');
        $('#loading2').removeClass('loader-inner');
        });
    </script>
}