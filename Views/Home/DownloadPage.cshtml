@model BoilerTemplateGeneration.Models.HomeModel;



@{
    ViewData["Title"] = "Main Page";
    Layout = "~/Views/Shared/layout.cshtml";
    
}


@if(TempData["success"]!= null)
{
    <script type="text/javascript">
       toastr.success('@TempData["success"]',{"iconClass": 'toast-success'});
       
    </script>
}
@if(TempData["error"]!= null)
{
    <script type="text/javascript">
       toastr.error('@TempData["error"]',{"iconClass": 'toast-error'});
       
    </script>
}

@section Styles
{
    <style>
        .Drop{
            position:relative;
        }
    </style>
}

<div>
    <p class="font-weight-bold text-primary font-italic">Thank You For Using Boiler Template.Click The Download Button To Get Your Project</p>
 <div>
     <button type="button" class="btn btn-primary small" value="Download Project" 
        onclick="location.href='@Model.FilePath'">Download Project</button>
 </div>
    
</div>





@section scripts
{
    <script>
        
        $(window).on('load',function() {
                                
            $('body').removeClass('preload')
        $('#loading').removeClass('loader-wrapper');
        $('#loading1').removeClass('loader');
        $('#loading2').removeClass('loader-inner');
        });
    </script>
}